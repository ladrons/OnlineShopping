@model ProductVM
@{
    ViewBag.Title = "AddProduct";
}

@using (Html.BeginForm("AddProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="row">
    <div class="col-sm-12">

        <section class="panel">
            <header class="panel-heading">
                <center><h3 style="color: #39b5aa">Ürün Ekleme Sayfası</h3></center>
            </header>

            <div class="panel-body">
                <div class="form-group">
                    <label class="col-sm-2"> Ürün İsim</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.Product.ProductName, new { @class = "form-control" })

                        <label class="validation">@Html.ValidationMessageFor(x => x.Product.ProductName)</label>
                    </div>
                </div>

                <br /> <br />

                <div class="form-group">
                    <label class="col-sm-2"> Ürün Fiyatı</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.Product.UnitPrice, new { @class = "form-control" })

                        <label class="validation">@Html.ValidationMessageFor(x => x.Product.UnitPrice)</label>
                    </div>
                </div>

                <br /> <br />

                <div class="form-group">
                    <label class="col-sm-2"> Ürün Stok</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.Product.UnitsInStock, new { @class = "form-control" })

                        <label class="validation">@Html.ValidationMessageFor(x => x.Product.UnitsInStock)</label>
                    </div>
                </div>

                <br /> <br /> <hr />

                <div class="form-group">
                    <label class="col-sm-2"> Kategori</label>
                    <div class="col-sm-10">
                        @Html.DropDownListFor(x => x.Product.CategoryID, new SelectList(Model.Categories, "ID", "CategoryName"), "Lutfen seciniz")

                        <label class="validation">@ViewBag.NotSelectedCategory</label>
                    </div>
                </div>

                <br /> <br />

                <div class="form-group">
                    <label class="col-sm-2"> Resim seciniz</label>
                    <div class="col-sm-10">
                        <input type="file" name="resim" class="form-control genislik" />
                    </div>
                </div>

                <br /> <br />

                <div class="form-group">
                    <label class="col-sm-2"> </label>
                    <div class="col-sm-10">
                        <button class="btn btn-primary" style="width:100px;"> Ekle</button>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
}

<style>
    .validation {
        color: red;
        font-size: 12px;
    }
</style>


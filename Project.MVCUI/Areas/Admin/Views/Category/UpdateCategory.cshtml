@model CategoryVM
@{
    ViewBag.Title = "UpdateCategory";
}

<body class="panel-body">
    @using (Html.BeginForm())
    {
        <section class="panel">
            <header class="panel-heading">
                <center><h3 style="color: #39b5aa ">Kategori Güncelleme Sayfası</h3></center>
            </header>

            @Html.HiddenFor(x => x.Category.ID)

            <div class="panel-body">
                <div class="form-group">
                    <label class="col-sm-2"> Kategori İsim</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.Category.CategoryName, new { @class = "form-control" })

                        <label class="validation">@Html.ValidationMessageFor(x => x.Category.CategoryName)</label>
                    </div>
                </div>

                <br /> <br />

                <div class="form-group">
                    <label class="col-sm-2"> Acıklama</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.Category.Description, new { @class = "form-control" })

                        <label class="validation">@Html.ValidationMessageFor(x => x.Category.Description)</label>
                    </div>
                </div>

                <br /> <br /> <hr />

                <div class="form-group">
                    <div class="col-sm-10">
                        <button class="btn btn-primary" style="width:100px;"> Ekle</button>
                    </div>
                </div>
            </div>
        </section>
    }
</body>

<style>
    .validation {
        color: red;
        font-size: 12px;
    }
</style>

@model AppUserVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">

    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="img/favicon.png">

    <title>OnlineShopping | Sign In</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Tools/OuterTools/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Tools/OuterTools/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="~/Tools/OuterTools/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/Tools/OuterTools/css/style.css" rel="stylesheet">
    <link href="~/Tools/OuterTools/css/style-responsive.css" rel="stylesheet" />
</head>

<body class="login-body">
    <div class="container">

        <h2>@ViewBag.KayitliBilgi</h2>

        @using (Html.BeginForm("RegisterNow", "Register", FormMethod.Post, new { @class = "form-signin" }))
        {
            <center><h2 class="form-signin-heading">ÜYE OL</h2></center>

            <div class="login-wrap">

                <p>Üyelik Bilgileri</p>

                @Html.TextBoxFor(x => x.AppUser.UserName, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
                @Html.PasswordFor(x => x.AppUser.Password, new { @class = "form-control", placeholder = "Şifre" })
                @Html.TextBoxFor(x => x.AppUser.EMail, new { @class = "form-control", placeholder = "E-Posta" })

                <p>Kişisel Bilgiler</p>

                @Html.TextBoxFor(x => x.Profile.FirstName, new { @class = "form-control", placeholder = "İsim" })
                @Html.TextBoxFor(x => x.Profile.LastName, new { @class = "form-control", placeholder = "Soyisim" })
            </div>

            <button class="btn btn-lg btn btn-block btn btn-primary">Üye Ol</button>

            <br />

            <p>Zaten üye Misin?</p>
            <div class="btn btn-lg btn-block">@Html.ActionLink("Giriş Yap", "Login", "Home")</div>
        }
    </div>
</body>
</html>
